<form class="form-horizontal" role="form" action="/verify" method="POST">
  <h1>Verification</h1>
  <div class="form-group">
    <label class="control-label col-sm-2" for="one-time-pin">One-time password:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="one-time-pin" name="one_time_pin" placeholder="Enter password.">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">VERIFY</button>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <!-- The pin you have entry is... -->
    </div>
  </div>
  <h5 id='warning'>{{messages.warning}}</h5>
</form>
