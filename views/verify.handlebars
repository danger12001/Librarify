<form class="form-horizontal" role="form" action="/verify" method="POST">
  <h1>Verification</h1>
  <div class="form-group">
    <div class="col-sm-10">
      <input type="text" class="form-control" id="one-time-pin" name="one_time_pin" placeholder="Enter one-time pin.">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">VERIFY</button>
    </div>
  </div>

  <h5 id='warning'>{{messages.warning}}</h5>
  <div class="row">
      {{#img}}
          <div class="col s12 m6">
            <div class="card">
              <div class="card-image">
                  <img src="{{img}}" alt="" />
              </div>

            </div>
          </div>
        {{/img}}
</div>
</form>
